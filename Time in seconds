#include <iostream>

using namespace std;

class Time
{
    public:
    int h, m, s;
    Time()
    {
        h = 0;
        m = 0;
        s = 0;
    }
};

int main()
{
    Time t;
    cout<<"Hours? ";
    cin>>t.h;
    cout<<"Minutes? ";
    cin>>t.m;
    cout<<"Seconds? ";
    cin>>t.s;
    cout<<"The time is = "<<t.h<<":"<<t.m<<":"<<t.s;
    cout<<"\nTime in total seconds: "<<3600*t.h+60*t.m+t.s;
    return 0;
}
